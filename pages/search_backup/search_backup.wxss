/* pages/search/search.wxss */
 
@import "../common/SearchBar/SearchBar.wxss";
.container .search{
  width: 100%;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #CD6155;
}
.container .search-left{
  flex: 8;
  background: #FCFAFA;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #CACFD2;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 25rpx;
  background: #FFFFFF; 
  color: #000;
}
.search_view {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_bar {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 690rpx;
  height: 70rpx;
  border-style: solid;
  border-color: rgb(228, 228, 228);
  border-width: 1px;
  border-radius: 12rpx;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.search_bar input {
  position: absolute;
  height: 100%;
  left: 60rpx;
  right: 70rpx;
}

.search_bar image {
  position: absolute;
  width: 40rpx;
  height: 100%;
  right: 20rpx;
}